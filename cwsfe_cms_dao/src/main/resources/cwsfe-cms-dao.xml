<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <beans profile="wildfly">
        <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
            <property name="jndiName" value="jdbc/cwsfe_cms"/><!--JNDI name in wildfly is different than tomcat. Java standards sucks.-->
        </bean>
    </beans>
    <beans profile="tomcat">
        <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
            <property name="jndiName" value="java:comp/env/jdbc/cwsfe_cms"/><!--JNDI name in wildfly is different than tomcat. Java standards sucks.-->
        </bean>
    </beans>
    <beans profile="tomcat-aws">
        <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
            <property name="jndiName" value="java:comp/env/jdbc/cwsfe_cms"/><!--JNDI name in wildfly is different than tomcat. Java standards sucks.-->
        </bean>
    </beans>

</beans>
