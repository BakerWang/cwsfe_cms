<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="cmsMailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="session" ref="cmsMailSession" />
    </bean>

    <beans profile="wildfly">
        <bean id="cmsMailSession" class="org.springframework.jndi.JndiObjectFactoryBean">
            <property name="jndiName" value="java:/mail/CWSFEMail" /><!--JNDI name in wildfly is different than tomcat. Java standards sucks.-->
        </bean>
    </beans>
    <beans profile="tomcat">
        <bean id="cmsMailSession" class="org.springframework.jndi.JndiObjectFactoryBean">
            <property name="jndiName" value="java:comp/env/mail/CWSFEMail" /><!--JNDI name in wildfly is different than tomcat. Java standards sucks.-->
        </bean>
    </beans>

</beans>